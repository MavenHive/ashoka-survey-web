<div class="question">
  {{> v2_survey_builder/surveys/right_pane/question_details_without_options }}

  <div class="question-max-value question-fields">
    <label class="question-max-value-label">Max Value <span class="question-content-label-error">{{ errors.content }}</span></label>
    <input type="text" class="question-max-value-text" value="{{ max_value }}"/>
  </div>

  <div class="question-min-value question-fields">
    <label class="question-min-value-label">Min Value <span class="question-content-label-error">{{ errors.content }}</span></label>
    <input type="text" class="question-min-value-text" value="{{ min_value }}"/>
  </div>

  <button class="survey-builder-action-button question-update">Update</button>
</div>
