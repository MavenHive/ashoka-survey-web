<%= f.semantic_fields_for(:questions, :child_index => "mustache_id") do |f| %>
  <%= f.inputs do %>
    <%= f.input :content, :as => :string, :input_html => {:id => 'foo'} %>
    <%= f.input :max_length, :as => :number %>
    <%= f.input :image, :as => :file %>
    <%= f.input :type, :as => :hidden, :input_html => { :value => 'SingleLineQuestion' } %>
    <%= f.input :mandatory, :as => :boolean %>
  <% end %>
<% end %>
