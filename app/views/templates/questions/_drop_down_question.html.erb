<label><%= t("surveys.build.question_title") %> </label>
<input type="text" name="content" value="{{content}}"></input>
<div>
  <label><%= t("activerecord.attributes.question.mandatory") %> </label>
  {{#mandatory}}
		<input type="checkbox" name="mandatory" value="{{mandatory}}" checked ></input>
	{{/mandatory}}
	{{^mandatory}}
		<input type="checkbox" name="mandatory" value="{{mandatory}}"></input>
	{{/mandatory}}
</div>

<div class="upload_files">
  <label><%= t("activerecord.attributes.question.image") %> </label>
  <input name="image" class="fileupload" type="file" name="files[]" accept="image/png, image/jpg">
</div>

{{^parent_id}}
  <div>
    <label><%= t "surveys.build.mark_identifier" %></label>
    {{#identifier}}
      <input type="checkbox" name="identifier" value="{{identifier}}" checked ></input>
    {{/identifier}}
    {{^identifier}}
      <input type="checkbox" name="identifier" value="{{identifier}}"></input>
    {{/identifier}}
  </div>
{{/parent_id}}


<div>
  <%= button_tag t("add_option"), :class => "add_option" %>
</div>
<textarea class="add_options_in_bulk" placeholder="<%= t('surveys.build.add_options_in_bulk_help_text') %>"></textarea>
<div class="add_options_in_bulk"><%= button_tag t("surveys.build.add_options_in_bulk_label"), :class => "add_options_in_bulk" %></div>
