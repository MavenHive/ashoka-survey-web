<%= stylesheet_link_tag 'backbone_survey_builder' %>
<h1> <%= t ".build_survey" %> </h1>

<div id="survey_builder">
  <div id="sidebar">
    <ul>
      <li><a href="#picker_pane"><%= t(".pick_question_type") %></a></li>
      <li><a href="#settings_pane"><%= t(".question_settings") %></a></li>
    </ul>
    <div id="picker_pane">
      <%= link_to t(".add_single_line_question"), "#", :id => "add_single_line_question" %>
      <%= link_to t(".add_radio_question"), "#", :id => "add_radio_question" %>
      <%= link_to t(".add_multiline_question"), "#", :id => "add_multiline_question" %>
    </div>
    <div id="settings_pane"></div>
  </div>

  <div id="dummy_pane"></div>
  <input type="button" value="Save" id="save"></input>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    window.flash_view = new SurveyBuilder.Views.FlashView;
    window.survey_builder = new SurveyBuilder.Views.SurveyBuilderView(<%= @survey.id %>);
  });
</script>

<%= render 'templates/build_mustache_templates' %>