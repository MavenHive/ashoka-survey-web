<h1> <%= t ".create_survey" %> </h1>

<div id="survey">
  <%= semantic_form_for @survey do |f| %>
    <%= f.inputs :name, :expiry_date, :description %>

    <script type="text/html" id="question_template">
      <%= (render 'questions/new', :f => f) %>
    </script>

    <div id="questions"></div>

    <%= link_to t(".add_question"), '#', :class => 'add_question_field' %>

    <%= f.actions do %>
      <%= f.action :submit, :as => :button %>
    <% end %>
  <% end %>
</div>

<script type="text/javascript">
  new SurveyApp.Survey($("#survey"));
</script>