<div class = "header">
  <ul>
    <li><%= link_to t("header.home"), root_path %></li>
    <% if user_currently_logged_in? %>
      <li><%= link_to t("header.logout"), logout_path, :class => 'logout' %></li>
      <li class='username'><%= t("header.logged_in_as", :username => current_username) %></li>
    <% else %>
      <li><%= link_to t("header.log_in"), '/auth/user_owner', :class => 'signin' %></li>
    <% end %>
    <% unless Rails.env.production? %>
        <a class='logout'><%= "You are a #{current_user_info.try(:[], :role)}" %></a>
    <% end %>
  </ul>
</div>
