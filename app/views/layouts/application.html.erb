<!DOCTYPE html>
<html>
  <head>
    <%= airbrake_javascript_notifier %>
    <title><%= t(:application_title) %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <script type="text/javascript">
    I18n.defaultLocale = "<%= I18n.default_locale %>";
    I18n.locale = "<%= I18n.locale %>";
    var user_info = {};
    <% if user_currently_logged_in? %>
        user_info = {
          user_id: <%= current_user_info.user_id %>,
          name: "<%= current_user_info.name %>",
          email: "<%= current_user_info.email %>",
          org_id: <%= current_user_info.org_id %>,
          role: "<%= current_user_info.role %>"
        };
    <% end %>
    SurveyApp.tracker = new SurveyApp.Tracker(user_info, <%= Rails.env.development? %>);
   </script>

  <body<%= yield :body_attributes %>>
    <div id="page">
      <%= render "layouts/header" %>

      <%= yield :status_bar unless @public_response %>

      <div id="content" role="content">
        <%= render "layouts/flash", :flash => flash %>
        <%= yield %>
        <% unless Rails.env.production? %>
          <div id='footnotes_holder'></div>
        <% end %>
      </div>

      <%= render "layouts/footer" %>
    </div>
  </body>
</html>
